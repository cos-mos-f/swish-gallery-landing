---
const { content } = Astro.props;
const { smartManagement } = content;

const cardShadowClasses = [
  "hover:shadow-blue-500/10",
  "hover:shadow-pink-500/10",
  "hover:shadow-purple-500/10",
];
---

<section class="section-block py-32 px-6 max-w-4xl mx-auto border-t border-gray-100">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16">
    <h2 class="text-3xl font-bold tracking-tighter leading-tight">
      {smartManagement.heading}
    </h2>
    <p class="text-sm text-brand-gray mt-4 md:mt-0">
      {smartManagement.subheading}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {
      smartManagement.cards.map((card, index) => (
        <div
          class={`feature-card bg-gray-50 p-8 h-64 flex flex-col justify-between transition-all duration-300 cursor-default group hover:bg-white hover:shadow-xl hover:-translate-y-1 ${cardShadowClasses[index]}`}
        >
          <span class="text-xs font-bold tracking-widest uppercase text-brand-gray group-hover:text-gradient font-inter">
            {card.number}
          </span>
          <div>
            <h3 class="font-bold text-lg mb-2 group-hover:text-gradient">{card.title}</h3>
            <p class="text-xs text-brand-gray leading-relaxed">{card.body}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
