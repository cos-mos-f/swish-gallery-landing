---
const { content } = Astro.props;
const { header } = content;
const { languageSwitch } = header;
---

<header
  id="header"
  class="site-header fixed top-0 w-full bg-white/80 backdrop-blur-md z-50 transition-all duration-300 border-b border-transparent"
  role="banner"
>
  <div class="site-header-inner max-w-7xl mx-auto px-4 h-20 flex items-center justify-between">
    <a href="#" class="flex items-center gap-3 group">
      <img
        src="/assets/icons/logo.svg"
        alt={header.logoAlt}
        class="w-12 h-12 transition-transform duration-500"
      />
      <span class="font-semibold text-md tracking-widest uppercase font-inter">
        {header.brand}
      </span>
    </a>
    <nav aria-label={header.navAriaLabel} class="flex items-center gap-6">
      <a
        href={languageSwitch.otherUrl}
        class="text-xs font-normal text-brand-black/70
        tracking-widest uppercase
        border-b border-transparent hover:border-brand-gray transition-colors"
        aria-label={`${header.languageLabel}: ${languageSwitch.other}`}
      >
        {languageSwitch.other}
      </a>
      <a
        href="#download"
        class="site-header-link text-xs font-bold tracking-widest uppercase border-b-2 border-transparent hover:border-brand-gray transition-colors"
      >
        {header.download}
      </a>
    </nav>
  </div>
</header>
