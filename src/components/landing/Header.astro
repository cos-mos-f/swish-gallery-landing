---
const { content } = Astro.props;
const { header } = content;
const { languageSwitch } = header;
---

<header
    id="header"
    class="site-header fixed top-0 w-full bg-white/80 backdrop-blur-md z-50 transition-all duration-300 border-b border-transparent"
    role="banner"
>
    <div
        class="site-header-inner max-w-7xl mx-auto px-6 h-20 flex items-center justify-between"
    >
        <a href="#" class="flex items-center gap-3 group">
            <img
                src="/assets/icons/logo.svg"
                alt={header.logoAlt}
                class="w-8 h-8 transition-transform duration-500"
            />
            <span class="font-semibold text-sm tracking-widest uppercase font-inter">
                {header.brand}
            </span>
        </a>
        <nav aria-label={header.navAriaLabel} class="flex items-center gap-6">
            <a
                href="#download"
                class="site-header-link text-xs font-bold tracking-widest uppercase border-b-2 border-transparent hover:border-brand-gray transition-colors pb-1"
            >
                {header.download}
            </a>
            <span
                class="hidden sm:inline-block text-[10px] font-semibold tracking-[0.25em] uppercase text-brand-gray font-inter"
            >
                {header.languageLabel}
            </span>
            <a
                href={languageSwitch.otherUrl}
                class="text-xs font-semibold tracking-widest uppercase text-brand-black/70 hover:text-brand-black transition-colors font-inter"
                aria-label={`${header.languageLabel}: ${languageSwitch.other}`}
            >
                {languageSwitch.other}
            </a>
        </nav>
    </div>
</header>
