---
const { content } = Astro.props;
const { download, links } = content;
---

<section
  id="download"
  class="download-section py-32 px-6 bg-gradient-dark text-white text-center relative overflow-hidden"
>
  <div
    class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500 rounded-full mix-blend-overlay filter blur-3xl opacity-20 -translate-y-1/2"
  >
  </div>
  <div
    class="absolute bottom-0 right-1/4 w-96 h-96 bg-pink-500 rounded-full mix-blend-overlay filter blur-3xl opacity-20 translate-y-1/2"
  >
  </div>

  <div class="max-w-3xl mx-auto relative z-10">
    <img
      src="/assets/icons/logo.svg"
      alt={download.logoAlt}
      class="w-16 h-16 mx-auto mb-8 animate-pulse"
    />

    <h2 class="text-4xl md:text-6xl font-bold tracking-tighter mb-8 leading-tight">
      {download.headingLine1}<br />{download.headingLine2}
    </h2>

    <div
      class="download-panel mb-12 border border-white/10 inline-block p-8 rounded-2xl bg-white/5 backdrop-blur-md"
    >
      <p class="text-xl font-bold mb-2">{download.panelTitle}</p>
      <p class="text-gray-300 text-sm mb-8">
        {download.panelBodyPrefix}
        <span class="text-white font-bold text-lg">{download.price}</span>
        <br />
        {download.panelBodySuffix}
      </p>
      <a
        href={links.store}
        class="inline-block bg-gradient-brand text-white px-12 py-4 rounded-full font-bold tracking-wider hover:scale-105 transition-transform duration-300 shadow-lg shadow-blue-500/25 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-slate-800"
        aria-label={download.ctaAriaLabel}
        onclick="gtag && gtag('event', 'click_store', { event_category: 'engagement', event_label: 'download_section' });"
      >
        <span class="flex items-center gap-3">
          <img src="/assets/icons/microsoft-store.svg" alt="" class="w-5 h-5" aria-hidden="true" />
          {download.ctaLabel}
        </span>
      </a>
    </div>

    <p class="text-xs text-gray-400 font-medium tracking-widest uppercase">
      {download.platformNote}
    </p>
  </div>
</section>
