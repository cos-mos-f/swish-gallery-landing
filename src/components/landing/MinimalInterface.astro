---
const { content } = Astro.props;
const { minimalInterface } = content;

const linesWithBreaks = (lines) =>
    lines.map((line, index) => ({
        line,
        isLast: index === lines.length - 1,
    }));
---

<section
    class="section-block py-32 md:py-48 px-6 max-w-7xl mx-auto bg-gray-50/80"
>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-20 items-center">
        <div class="order-2 md:order-1 relative">
            <div class="aspect-square bg-white shadow-xl shadow-blue-500/5">
                <img
                    src="/images/feature-minimal.png"
                    alt={minimalInterface.imageAlt}
                    class="w-full h-full object-cover"
                    loading="lazy"
                />
            </div>
        </div>
        <div class="order-1 md:order-2 md:pl-10">
            <h2
                class="text-4xl md:text-5xl font-bold tracking-tighter mb-8 text-black leading-tight"
            >
                {minimalInterface.headingLine1}<br />
                {minimalInterface.headingLine2}
            </h2>
            <div class="w-12 h-1 bg-gradient-brand mb-8 rounded-full"></div>
            <p class="text-brand-gray text-lg font-light leading-relaxed mb-8">
                {linesWithBreaks(minimalInterface.bodyLines).map(
                    ({ line, isLast }) => (
                        <span>
                            {line}
                            {!isLast && <br />}
                        </span>
                    )
                )}
            </p>
            <ul class="space-y-4 text-sm font-medium tracking-wide font-inter">
                {minimalInterface.bullets.map((bullet, index) => (
                    <li class="flex items-center gap-3">
                        <span
                            class={`block w-2 h-2 rounded-full ${
                                index === 0 ? "bg-gradient-brand" : "bg-gray-200"
                            }`}
                        ></span>
                        {bullet}
                    </li>
                ))}
            </ul>
        </div>
    </div>
</section>
