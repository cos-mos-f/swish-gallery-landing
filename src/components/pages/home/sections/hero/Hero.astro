---
const { content } = Astro.props;
const { hero } = content;
---

<section class="relative overflow-hidden h-screen md:h-auto md:inset-0">
  <img
    src="/public/images/HERO_IMAGE.png"
    alt=""
    class="absolute md:static inset-0 h-full w-full object-cover object-center -z-10 opacity-80"
  />
  <div
    class="static md:absolute top-0 w-full pb-16 pt-16 h-full bg-linear-to-b from-black/20 via-black/10 to-transparent
    flex justify-center items-center"
  >
    <div
      class="relative max-w-6xl w-full h-full z-10 flex flex-col items-center justify-start px-4"
    >
      <div
        class="flex-col items-center py-10 text-white tracking-widest
                font-display font-normal text-4xl md:text-5xl text-center"
      >
        <h1 class="">
          {hero.title}
        </h1>
        <div class="h-4"></div>
        <h2 class="">
          {hero.subtitle}
        </h2>
      </div>
      <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:items-center">
        <a
          href={hero.ctaUrl}
          class="cta-button inline-flex items-center justify-center rounded-full bg-(--color-accent) px-6 py-3 text-sm font-semibold uppercase tracking-[0.25em] text-white"
        >
          {hero.ctaLabel}
        </a>
        <div class="text-xs uppercase tracking-[0.2em] text-ink-60">
          <div>{hero.platformNote}</div>
          <div>{hero.priceNote}</div>
        </div>
      </div>
    </div>
    <div class="relative z-10">
      <!-- <div
        class="media-card aspect-4/3 rounded-3xl border border-ink-10 bg-white/70 p-6 shadow-[0_30px_80px_-40px_rgba(20,30,40,0.4)]"
      >
        <div class="img-placeholder" aria-label={hero.mediaAlt}>
          <span class="text-xs uppercase tracking-[0.2em]">{hero.mediaLabel}</span>
        </div>
      </div> -->
    </div>
  </div>
</section>
