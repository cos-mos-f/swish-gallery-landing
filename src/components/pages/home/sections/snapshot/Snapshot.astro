---
const { content } = Astro.props;
const { snapshot } = content;
---

<section id="snapshots" class="py-32 px-6 max-w-7xl mx-auto">
  <div class="mb-16 text-center">
    <h2 class="text-3xl md:text-5xl font-bold tracking-tighter mb-6 leading-tight text-brand-black">
      {snapshot.title}
    </h2>
  </div>
  <div class="grid gap-8 md:grid-cols-3">
    {
      snapshot.items.map((item: string) => (
        <div class="rounded-2xl border border-gray-200 bg-white p-4 shadow-lg shadow-blue-500/5">
          <div class="img-placeholder" aria-label={item}>
            <span class="text-xs uppercase tracking-[0.2em]">{item}</span>
          </div>
        </div>
      ))
    }
  </div>
</section>
