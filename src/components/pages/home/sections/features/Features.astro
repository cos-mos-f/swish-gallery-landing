---
const { content } = Astro.props;
const { features } = content;
---

<section id="features" class="py-16">
  <div class="mx-auto max-w-6xl px-4">
    <div>
      <h2 class="font-display text-2xl text-ink md:text-3xl">
        {features.title}
      </h2>
    </div>
    <div class="mt-10 space-y-10">
      {
        features.items.map(
          (item: { mediaLabel: string; title: string; bullets: string[] }, index: number) => (
            <div
              class={`feature-row flex flex-col gap-6 rounded-3xl border border-ink-10 bg-white/70 p-6 md:flex-row ${index % 2 === 1 ? "md:flex-row-reverse" : ""}`}
            >
              <div class="w-full md:w-1/2">
                <div class="img-placeholder h-full" aria-label={item.mediaLabel}>
                  <span class="text-xs uppercase tracking-[0.2em]">{item.mediaLabel}</span>
                </div>
              </div>
              <div class="w-full md:w-1/2">
                <h3 class="font-display text-xl text-ink md:text-2xl">{item.title}</h3>
                <ul class="mt-4 space-y-2 text-sm text-ink-70">
                  {item.bullets.map((bullet) => (
                    <li class="flex gap-3">
                      <span class="mt-1 h-2 w-2 rounded-full bg-(--color-accent)" />
                      <span>{bullet}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          )
        )
      }
    </div>
  </div>
</section>
