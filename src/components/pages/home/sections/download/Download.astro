---
const { content } = Astro.props;
const { download } = content;
---

<section
  id="download"
  class="py-32 px-6 text-white text-center relative overflow-hidden bg-brand-gray"
>
  <div class="mx-auto relative z-10">
    <h2 class="text-4xl md:text-6xl font-light tracking-widest mb-8 leading-tight">
      {download.heading}
    </h2>

    <div class="download-panel mb-12 inline-block p-8">
      <p class="text-md font-light mb-8 tracking-wider">
        {download.body}
      </p>
      <a
        href={download.ctaUrl}
        data-ga-event="download_click"
        data-ga-location="section"
        class="inline-block border-3 border-white px-12 py-4 rounded-full
        text-white font-bold tracking-wider
        hover:outline-5"
      >
        <span class="flex items-center gap-3 text-xl">
          <svg
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M0 0h11.5v11.5H0V0zm12.5 0H24v11.5H12.5V0zM0 12.5h11.5V24H0V12.5zm12.5 0H24V24H12.5V12.5z"
            ></path>
          </svg>

          {download.ctaLabel}
        </span>
      </a>
    </div>
    <p class="text-xs text-white font-light tracking-widest">
      {download.platformNote}
    </p>
  </div>
</section>
